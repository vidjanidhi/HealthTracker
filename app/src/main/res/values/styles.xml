<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="activity_main_image">
        <item name="android:padding">10dp</item>
        <!--<item name="android:background">@drawable/border</item>-->
    </style>

    <style name="activity_main_text">
        <item name="android:padding">5dp</item>
        <!--<item name="android:background">@color/colorPrimary</item>-->
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <!--<item name="android:gravity">center_horizontal</item>-->
    </style>

    <style name="fragment_edittext">
        <item name="android:ems">5</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="fragment_textview">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_size_12sp</item>
    </style>

    <style name="manage_screen_textview">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="manage_screen_layout">
        <item name="android:background">@drawable/border</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="manage_screen_image">
        <item name="android:layout_margin">10dp</item>
    </style>


</resources>
