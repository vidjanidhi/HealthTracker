<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_c_item_date"
                style="@style/activity_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_cholestrol_item_hdl"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hdl" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_cholestrol_item_ldl"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ldl" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_cholestrol_item_total"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="total" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_cholestrol_item_triglyceride"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="triglyceride" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>