<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/iv_weighdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/charts" />

            <com.healthtracker.component.MyTitleFontTextView
                android:id="@+id/tv_weigdht"
                style="@style/Home_TitleText"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charts" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_weight"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_glucose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_glucose"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/glucose" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_glucose"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Glucose" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view34"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_bp"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bp" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_bp"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B.P" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view134"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_colestrol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_colesterol"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/colesterol" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_colesterol"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colesterol" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_thyroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_thyroid"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thyroid" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_thyroid"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thyroid" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view36"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_weight_glucose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Home_ImageButton"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_weight_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/weight" />
                        <ImageView
                            android:id="@+id/iv_glucose_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/glucose" />
                    </LinearLayout>

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight3"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight+Glucose" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_weight_colesterol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Home_ImageButton"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_weight_colesterol1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/weight" />
                        <ImageView
                            android:id="@+id/iv_weight_colesterol2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/colesterol" />
                    </LinearLayout>

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_colesterol"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight+Colesterol" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view361"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_weight_thyroid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Home_ImageButton"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_weight_thyroid1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/weight" />
                        <ImageView
                            android:id="@+id/iv_weight_thyroid2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/thyroid" />
                    </LinearLayout>
                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_thyroid"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight+Thyroid" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view135"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/ll_weight_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/Home_ImageButton"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/iv_weight_bp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/weight" />
                        <ImageView
                            android:id="@+id/iv_weight_bp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bp" />
                    </LinearLayout>

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_bp"
                        style="@style/Home_TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight+B.P" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
