<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.healthtracker.MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_weight"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_weight"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_glucose"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_glucose"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Glucose" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_bp"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_bp"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="B.P" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_colesterol"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_colesterol"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Colesterol" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_thyroid"
                        style="@style/Home_ImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_thyroid"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thyroid" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_diary"
                        style="@style/Home_ImageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_diary"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_chart"
                        style="@style/Home_ImageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_chart"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_logs"
                        style="@style/Home_ImageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_logs"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lsogs" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/ib_statistics"
                        style="@style/Home_ImageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_statistics"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Statistics" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    4#<ImageButton
                        android:id="@+id/ib_manage"
                        style="@style/Home_ImageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/demo" />

                    <TextView
                        android:id="@+id/tv_manage"
                        style="@style/Home_TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
