<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_weight_item_date"
                style="@style/activity_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_upload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_weight"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_weight_unit"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_fat"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_fat_unit"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="%" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_abdomen"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_abdomen_unit"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_waist"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_waist_unit"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="kg" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_hip"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="weight" />

                    <com.healthtracker.component.MyFontTextView
                        android:id="@+id/tv_weight_item_hip_unit"
                        style="@style/activity_main_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="kg" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>