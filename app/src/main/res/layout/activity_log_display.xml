<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.healthtracker.LogDisplayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Today" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="List" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Month" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Type" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="All" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_add_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:background="@drawable/datepicker_border"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fragment_for_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
