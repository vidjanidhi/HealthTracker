<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.healthtracker.StatisticsActivity">

    <com.healthtracker.component.MyFontTextView
        style="@style/activity_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select period for statistics : " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_statistics_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Week" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_statistics_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Month" />

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_statistics_six_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="6 Months" />

    </LinearLayout>

    <com.healthtracker.component.MyFontTextView
        style="@style/activity_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select custom number of days : " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontButton
            android:id="@+id/btn_statistics_calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/datepicker_border"
            android:text="Calculate" />

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_statistics_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="10dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.healthtracker.component.MyFontTextView
                        style="@style/activity_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Body Measures Average"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_weight_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Weight" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_weight"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_fat_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Fat(%)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_fat"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_abdomen_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Abdomen" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_abdomen"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_waist_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Waist" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_waist"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hip_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Hip" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hip"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_two"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.healthtracker.component.MyFontTextView
                        style="@style/activity_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Glucose Average"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_glucose_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Glucose(mmol/L)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_glucose"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hba1c_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Hba1c(%)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hba1c"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.healthtracker.component.MyFontTextView
                        style="@style/activity_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Blood Pressure Average"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_systolic_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Systolic(mmHg)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_systolic"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_diastolic_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Diastolic(mmHg)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_diastolic"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_heart_rate_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Heart Rate(bpm)" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_heart_rate"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.healthtracker.component.MyFontTextView
                        style="@style/activity_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cholesterol Average"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hdl_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="HDL" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_hdl"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_ldl_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="LDL" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_ldl"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="LDL" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_total_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Total" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_total"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_triglyceride_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Triglyceride" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_triglyceride"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.healthtracker.component.MyFontTextView
                        style="@style/activity_main_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Thyroid Average"
                        android:textSize="@dimen/font_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_tsh_level_unit"
                            style="@style/activity_main_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Tsh Level" />

                        <com.healthtracker.component.MyFontTextView
                            android:id="@+id/tv_statistics_tsh_level"
                            style="@style/activity_main_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Weight" />
                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
