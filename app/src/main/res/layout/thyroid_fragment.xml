<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="2">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_tsh_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:text="TSH Level"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_tsh_level"
            style="@style/fragment_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>

</LinearLayout>