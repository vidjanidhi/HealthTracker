<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="2">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_systolic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:text="Systolic(mmHg)"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_systolic"
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="2">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_diastolic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:text="Diastolic(mmHg)"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_diastolic"
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:weightSum="2">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_heart_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="10dp"
            android:text="Heart Rate(bpm)"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_heart_rate"
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>


</LinearLayout>