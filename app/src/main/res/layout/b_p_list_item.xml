<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_bp_item_date"
                style="@style/activity_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="date" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_upload"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bp" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_bp_item_systolic"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="glucose" />

                <com.healthtracker.component.MyFontTextView
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_bp_item_diastolic"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/dL" />

                <com.healthtracker.component.MyFontTextView
                    android:id="@+id/tv_bp_item_heart_rate"
                    style="@style/activity_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mg/dL" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>