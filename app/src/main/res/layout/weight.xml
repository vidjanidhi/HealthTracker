<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_weight"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Weight"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_weight"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:lines="2"
            android:singleLine="false"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_fat"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Fat"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_fat"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:lines="2"
            android:singleLine="false"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_abdomen"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Abdomen"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_abdomen"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:lines="2"
            android:singleLine="false"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <com.healthtracker.component.MyFontTextView
            android:id="@+id/tv_"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Weight"></com.healthtracker.component.MyFontTextView>

        <com.healthtracker.component.MyFontEdittextView
            android:id="@+id/et_"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:lines="2"
            android:singleLine="false"></com.healthtracker.component.MyFontEdittextView>
    </LinearLayout>

</LinearLayout>