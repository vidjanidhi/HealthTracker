<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.healthtracker.ManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_email"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_email"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send User Data By Email" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_manageuser"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_supervisor_account_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_manageuser"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Users" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_export"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_exit_to_app_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_export"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_settings"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_settings"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Settings" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_erase"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phonelink_erase_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_erase"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Erase All" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_save"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_save_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_save"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Data" />
        </LinearLayout>

        <LinearLayout
            style="@style/manage_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_import"
                style="@style/manage_screen_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_assignment_returned_black_36dp" />

            <com.healthtracker.component.MyFontTextView
                android:id="@+id/tv_import"
                style="@style/manage_screen_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import Data" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
